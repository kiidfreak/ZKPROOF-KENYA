{
  "name": "bkcverify",
  "version": "1.0.0",
  "description": "Blockchain-based Identity Verification & Electronic Document Signing System",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "echo 'Backend only - no client build needed for Railway'",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "interact:local": "hardhat run scripts/interact.js --network localhost",
    "admin": "hardhat run scripts/admin.js --network sepolia",
    "admin:local": "hardhat run scripts/admin.js --network localhost",
    "test-identity": "hardhat run scripts/test-identity.js --network sepolia",
    "setup": "node scripts/setup-env.js",
    "node": "hardhat node",
    "clean": "hardhat clean"
  },
  "keywords": [
    "blockchain",
    "identity-verification",
    "electronic-signatures",
    "ethereum",
    "web3",
    "react",
    "nodejs"
  ],
  "author": "BKC Verify Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-tesseract-ocr": "^2.2.1",
    "passport-next": "1.x.x",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "web3": "^4.0.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^4.9.6",
    "concurrently": "^8.2.0",
    "hardhat": "^2.17.0",
    "nodemon": "^3.0.1"
  }
}
